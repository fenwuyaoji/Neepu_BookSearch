<view class="swiper-tab">
  <view class="tab-item {{currentTab==0 ? 'on' : 'off'}}" data-current="0" bindtap="swichNav">历史借阅</view>
  <view class="tab-item {{currentTab==1 ? 'on' : 'off'}}" data-current="1" bindtap="swichNav">更多</view>
 </view>

<swiper current="{{currentTab}}" class="swiper" duration="300" style="height:{{winHeight - 30}}px" bindchange="bindChange">

<swiper-item> 

<scroll-view scroll-y="true" style="height: 100%"> 
<view class="page__bd" wx:for="{{showlist}}" wx:key="num">
  <view class="weui-form-preview" bindtap='viewtap' data-id="{{num}}">
    <view class="weui-form-preview__hd">
      <view class="weui-form-preview__item">
        <view class="weui-form-preview__label">书名</view>
        <view class='text'>{{item.book_name}}</view>
      </view>
    </view>
    <view class="weui-form-preview__bd">
      <view class="weui-form-preview__item">
        <view class="weui-form-preview__label">作者</view>
        <view class='text'>{{item.author}}</view>
      </view>
      <view class="weui-form-preview__item">
        <view class="weui-form-preview__label">起始时间</view>
        <view class='text'>{{item.start_t}}</view>
      </view>
      <view class="weui-form-preview__item">
        <view class="weui-form-preview__label">归还时间</view>
        <view class='text'>{{item.over_t}}</view>
      </view>
      <view class="weui-form-preview__item">
        <view class="weui-form-preview__label">地点</view>
        <view class='text'>{{item.loc}}</view>
      </view>
    </view>
  </view>
</view>

 <text>更多功能正在开发中...</text> 
</scroll-view> 

 </swiper-item>

<swiper-item>
<view class='text-more'>
 <text>更多功能正在开发中...</text> 
</view>
</swiper-item>

</swiper>