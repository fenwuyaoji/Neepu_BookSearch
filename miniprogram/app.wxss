@import 'style/weui.wxss';
@import 'components/wux.wxss';


page {
  background-color: white;
  font-size: 16px;
  font-family: -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
  font-family: '微软雅黑', Helvetica, 'Hiragino Sans GB', 'Microsoft Yahei', Arial, sans-serif;
}

button::after {
  border: none
}

.page__hd {
  padding: 20px;
}

.page__bd {
  padding-top: 8px;
  padding-left: 10px;
  padding-right: 10px;
}

.page__bd_spacing {
  padding-left: 15px;
  padding-right: 15px;
}

.page__ft {
  padding-bottom: 10px;
  text-align: center;
}

.page__title {
  text-align: left;
  font-size: 20px;
  font-weight: 400;
}

.page__desc {
  margin-top: 5px;
  color: #888;
  text-align: left;
  font-size: 14px;
}

/*自定义公共样式*/

.text_center {
  text-align: center;
}

::-webkit-scrollbar {
  width: 0;
  color: transparent;
}


