.table {
  border: 0px solid darkgray;
}
.tr {
  display: flex;
  width: 100%;
  justify-content: center;
  height: 3rem;
  align-items: center;
}
.td {
    width:40%;
    justify-content: center;
    text-align: center;
}
.bg-w{
  background: snow;
}
.bg-g{
  background: #E6F3F9;
}

.tr_w {
  display: flex;
  width: 100%;
  justify-content: center;
  height: 2rem;
  align-items: center;
}

.th_w{
    width: 40%;
  justify-content: center;
  background: #00BFFF;
  color: #fff;
  display: flex;
  height: 2rem;
  align-items: center;
}

.th {
  width: 40%;
  justify-content: center;
  background: #00BFFF;
  color: #fff;
  display: flex;
  height: 3rem;
  align-items: center;
}