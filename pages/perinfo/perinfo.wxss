.text{
    overflow:hidden; 
    text-overflow:ellipsis;
    white-space:nowrap; 
}

.text-more{
  text-align: center
}

.swiper-tab{ 
 width: 100%; 
 text-align: center; 
 /* border-bottom: 1px solid #000;  */
 display: flex; 
 flex-direction: row; 
 justify-content: center; 

} 
.tab-item{ 
 flex: 1; 
 font-size: 30rpx; 
 display: inline-block; 
 color: #777777; 
} 
.on{ 
 color: red; 
 border-bottom: 5rpx solid red; 
} 
.off{ 
 color: lightslategrey; 
 /* border-bottom: 5rpx solid red;  */
} 


.sideview{
  display: flex;
  flex-direction: row;
  padding: 10rpx
}


.swiper{ display: block ; height: 100%; width: 100%; overflow: hidden; } 
